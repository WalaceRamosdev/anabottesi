<script>
    import { gsap } from "gsap";

    const initHeroAnimation = () => {
        const tl = gsap.timeline({ defaults: { ease: "power4.out" } });

        tl.from("#hero-content > *", {
            y: 50,
            opacity: 0,
            stagger: 0.1,
            duration: 1.2,
        })
            .from(
                "#hero-image",
                {
                    x: 100,
                    opacity: 0,
                    duration: 1.5,
                },
                "-=1",
            )
            .from(
                "#hero-floating-card",
                {
                    scale: 0,
                    opacity: 0,
                    duration: 0.8,
                },
                "-=0.5",
            );
    };

    window.addEventListener("load", initHeroAnimation);
</script>
