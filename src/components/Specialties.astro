<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const animateCards = () => {
        // Reset any previous animations to avoid conflicts
        gsap.set(".spec-card", { opacity: 1, y: 0 });

        // Se houver suporte a JS, fazemos a anima√ß√£o de entrada
        gsap.from(".spec-card", {
            scrollTrigger: {
                trigger: "#especialidades",
                start: "top 85%",
                toggleActions: "play none none none",
            },
            y: 40,
            opacity: 0,
            stagger: 0.2,
            duration: 1,
            ease: "power2.out",
            // Garante que o estado final seja limpo para n√£o quebrar o hover do CSS
            onComplete: function () {
                gsap.set(this.targets(), { clearProps: "all" });
            },
        });
    };

    // Inicializa quando o DOM estiver pronto
    if (
        document.readyState === "complete" ||
        document.readyState === "interactive"
    ) {
        animateCards();
    } else {
        document.addEventListener("DOMContentLoaded", animateCards);
    }

    // Suporte para navega√ß√£o do Astro (se usar View Transitions)
    document.addEventListener("astro:after-swap", animateCards);
</script>
