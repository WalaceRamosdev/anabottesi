<section id="especialidades" class="bg-brand-bg py-24 relative overflow-hidden">
    <!-- Efeito de Borboletas nas Especialidades -->
    <div
        class="absolute inset-0 pointer-events-none overflow-hidden"
        id="specialties-butterfly-container"
    >
    </div>
    <div class="max-w-7xl mx-auto px-4 md:px-8">
        <div class="text-center mb-16">
            <h2
                class="text-brand-primary text-sm font-bold uppercase tracking-widest mb-4"
            >
