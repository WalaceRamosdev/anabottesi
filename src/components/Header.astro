            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden text-brand-primary p-2 focus:outline-none"
                aria-label="Abrir menu"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
