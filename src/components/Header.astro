    </nav>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobile-menu"
        class="fixed inset-0 bg-brand-primary z-[100] translate-x-full transition-transform duration-500 ease-in-out flex flex-col items-center justify-center lg:hidden overflow-y-auto"
    >
        <!-- Borboletas exclusivas do menu mobile -->
        <div
            class="absolute inset-0 pointer-events-none opacity-20"
            id="mobile-butterfly-container"
        >
        </div>

        <button
            id="close-menu-btn"
            class="absolute top-8 right-8 text-white p-2 focus:outline-none z-[110]"
            aria-label="Fechar menu"
        >
