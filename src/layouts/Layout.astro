---
import "../styles/global.css";
import StickyCTA from "../components/StickyCTA.astro";

interface Props {
	title: string;
	description?: string;
	canonicalURL?: string;
	ogImage?: string;
}

const {
	title,
	description = "Psicanálise online para mulheres em São Paulo. Acolhimento humanizado para ansiedade, autoestima e relacionamentos. Espaço seguro para mulheres cis, trans e diversidade.",
	canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
	ogImage = "/og-image.jpg",
} = Astro.props;

const schemaData = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "Person",
			"@id": "https://anabottesi.com.br/#person",
			name: "Ana Bottesi",
			jobTitle: "Psicanalista",
			url: "https://anabottesi.com.br",
			sameAs: ["https://www.instagram.com/ana.bottesi.psicanalista/"],
			description:
				"Psicanalista online especializada no atendimento de mulheres, com um olhar inclusivo para a diversidade (mulheres cis, trans e comunidade LGBTQIAPN+).",
			knowsAbout: [
				"Psicanálise para Mulheres",
				"Saúde Mental Inclusiva",
				"Acolhimento LGBTQIAPN+",
				"Terapia para Diversidade de Gênero",
				"Ansiedade e Autoestima",
				"Relacionamentos",
			],
		},
		{
			"@type": "LocalBusiness",
			"@id": "https://anabottesi.com.br/#organization",
			name: "Ana Bottesi - Psicanálise Online",
			image: "https://anabottesi.com.br/og-image.jpg",
			url: "https://anabottesi.com.br",
			telephone: "+5511973454557",
			address: {
				"@type": "PostalAddress",
				addressLocality: "São Paulo",
				addressRegion: "SP",
				addressCountry: "BR",
			},
			geo: {
				"@type": "GeoCoordinates",
				latitude: -23.5505,
				longitude: -46.6333,
			},
			areaServed: {
				"@type": "State",
				name: "São Paulo",
			},
			priceRange: "$$",
			audience: {
				"@type": "Audience",
				audienceType:
					"Mulheres, incluindo mulheres cis e trans, e comunidade lésbica/bissexual",
			},
		},
	],
};
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-8JWTVQTKBY"
			is:inline></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-8JWTVQTKBY");
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- SEO e Meta Tags -->
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />
		<meta
			name="google-site-verification"
			content="6SyPFZnpHwRZmFyM8rWx3Y6BP3Z63uTw16_Adtu7mow"
		/>
		<meta
			name="target-audience"
			content="Mulheres, incluindo mulheres cis, mulheres trans, lésbicas, bissexuais, comunidade LGBTQIAPN+, que buscam acolhimento psicanalítico online."
		/>
		<meta
			name="keywords"
			content="psicanalista online, terapia para mulheres, acolhimento lésbicas, psicanalista inclusiva SP, terapia afirmativa, saúde mental para mulheres trans, psicanálise diversidade, ana bottesi"
		/>

		<!-- Open Graph / Redes Sociais -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(ogImage, Astro.site)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

		<!-- Schema.org JSON-LD -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify(schemaData)}
		/>

		<!-- Fontes do Google -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- Pré-carregamento da fonte crítica para LCP (H1) -->
		<link
			rel="preload"
			as="font"
			href="https://fonts.gstatic.com/s/cormorantgaramond/v21/co3umX5slCNuHLi8bLeY9MK7whWMhyjypVO7abI26QOD_hg9GnM.ttf"
			type="font/ttf"
			crossorigin
		/>

		<link
			href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;0,700;1,400;1,600&family=Inter:wght@400;500;600;700&family=Nunito:wght@400;500;600;700&family=Dancing+Script:wght@400;700&display=swap"
			rel="stylesheet"
		/>

		<!-- Font Awesome - Carregamento Assíncrono para não bloquear a renderização -->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
			media="print"
			onload="this.media='all'"
		/>
		<noscript>
			<link
				rel="stylesheet"
				href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
			/>
		</noscript>
	</head>

	<body>
		<slot />
		<StickyCTA />

		<script>
			import { gsap } from "gsap";
			import { ScrollTrigger } from "gsap/ScrollTrigger";

			// Mitigação de Reflow Forçado: Inicializamos o GSAP após o cálculo inicial de layout
			const initGSAP = () => {
				gsap.registerPlugin(ScrollTrigger);

				// Configurações globais para performance
				ScrollTrigger.config({
					limitCallbacks: true,
					ignoreMobileResize: true,
				});

				// Refresh do ScrollTrigger após um pequeno delay para garantir estabilidade do DOM
				setTimeout(() => {
					ScrollTrigger.refresh();
				}, 100);
			};

			if (document.readyState === "complete") {
				initGSAP();
			} else {
				window.addEventListener("load", initGSAP);
			}

			// Gerenciamento de troca de página no Astro
			document.addEventListener("astro:after-swap", initGSAP);
		</script>
	</body>
</html>
