---
import "../styles/global.css";
import StickyCTA from "../components/StickyCTA.astro";

interface Props {
	title: string;
	description?: string;
	canonicalURL?: string;
	ogImage?: string;
}

const {
	title,
	description = "Psicanalista online em São Paulo especializada em terapia para mulheres. Atendimento online para ansiedade, autoestima e relacionamentos. Agende sua sessão.",
	canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
	ogImage = "/og-image.jpg",
} = Astro.props;

const schemaData = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "Person",
			"@id": "https://anabottesi.com.br/#person",
			name: "Ana Bottesi",
			jobTitle: "Psicanalista",
			url: "https://anabottesi.com.br",
			sameAs: ["https://www.instagram.com/ana.bottesi.psicanalista/"],
			description:
				"Psicanalista online especializada no atendimento de mulheres, com foco em ansiedade, autoestima e relacionamentos.",
		},
		{
			"@type": "LocalBusiness",
			"@id": "https://anabottesi.com.br/#organization",
			name: "Ana Bottesi - Psicanálise Online",
			image: "https://anabottesi.com.br/og-image.jpg",
			url: "https://anabottesi.com.br",
			telephone: "+5511973454557",
			address: {
				"@type": "PostalAddress",
				addressLocality: "São Paulo",
				addressRegion: "SP",
				addressCountry: "BR",
			},
			geo: {
				"@type": "GeoCoordinates",
				latitude: -23.5505,
				longitude: -46.6333,
			},
			areaServed: {
				"@type": "State",
				name: "São Paulo",
			},
			priceRange: "$$",
		},
	],
};
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-8JWTVQTKBY"
			is:inline></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-8JWTVQTKBY");
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- SEO e Meta Tags -->
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />
		<meta
			name="google-site-verification"
			content="6SyPFZnpHwRZmFyM8rWx3Y6BP3Z63uTw16_Adtu7mow"
		/>

		<!-- Open Graph / Redes Sociais -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(ogImage, Astro.site)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

		<!-- Schema.org JSON-LD -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify(schemaData)}
		/>

		<!-- Fontes do Google -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
			rel="stylesheet"
		/>
	</head>

	<body>
		<slot />
		<StickyCTA />

		<script>
			import { gsap } from "gsap";
			import { ScrollTrigger } from "gsap/ScrollTrigger";

			gsap.registerPlugin(ScrollTrigger);
		</script>
	</body>
</html>
