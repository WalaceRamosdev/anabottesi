        "mainEntity": [
            {
                "@type": "Question",
                "name": "A terapia ajuda a curar a ansiedade?",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "A psicanálise ajuda a compreender e lidar com as causas, transformando a ansiedade de obstáculo em compreensão."
                }
            },
            {
                "@type": "Question",
                "name": "Quando buscar terapia para ansiedade?",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "Quando ela interfere no sono, trabalho, relacionamentos ou qualidade de vida geral."
                }
            }
        ]
    }
</script>
